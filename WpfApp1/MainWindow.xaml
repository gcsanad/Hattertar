<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Kapacitás:" FontSize="20" VerticalAlignment="Center"></Label>
            <TextBox x:Name="txtKapacitas" HorizontalContentAlignment="Center" FontSize="15" VerticalContentAlignment="Center" Height="30" Width="80" Text="2000"></TextBox>
            <ComboBox x:Name="cbKapacitas" Margin="5" Height="30" Width="80">
                <ComboBoxItem Content="KB"/>
                <ComboBoxItem Content="MB" Selector.IsSelected="True"/>
                <ComboBoxItem Content="GB"/>
                <ComboBoxItem Content="TB"/>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="5" Orientation="Horizontal">
            <Label Content="Átviteli sebesség: " FontSize="20"/>
            <Slider x:Name="sldAtviteliseb" TickFrequency="1" IsSnapToTickEnabled="True" Width="300" Height="30" VerticalAlignment="Top" Margin="5 13 5 5" HorizontalAlignment="Left" Minimum="10" Maximum="5000" Value="3200"></Slider>
            <TextBox x:Name="txtAtviteliErtek" Width="80" Height="30" VerticalAlignment="Top" Margin="5" FontSize="15" Text="{Binding ElementName=sldAtviteliseb, Path=Value}" HorizontalContentAlignment="Center"/>
            <ComboBox x:Name="cbAtviteliseb" Margin="5" Width="80" Height="30" VerticalAlignment="Top">
                <ComboBoxItem Content="KBps"/>
                <ComboBoxItem Content="MBps" Selector.IsSelected="True"/>
                <ComboBoxItem Content="GBps"/>
                <ComboBoxItem Content="TBps"/>
            </ComboBox>
            <Button x:Name="btnSzamol" Width="150" Height="40" Content="Számol" FontSize="20" VerticalAlignment="Top" Click="btnSzamol_Click"></Button>
            
        </StackPanel>
    </Grid>
</Window>
